<Window x:Class="AppVaulina.Wiindow.SupplierAddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppVaulina.Wiindow"
        mc:Ignorable="d"
       Title="Добавить/Изменить поставщика" Height="370" Width="400" Background="#0E4A80">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Поставщик" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <Label Content="Наименование"/>
            <TextBox x:Name="tbName"/>
            <Label Content="Телефон"/>
            <TextBox x:Name="tbPhone"/>
            <Label Content="Почта"/>
            <TextBox x:Name="tbEmail"/>
            <Label Content="Адрес"/>
            <TextBox x:Name="tbAddress"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click" Margin="5"/>
                <Button x:Name="btnCancel" Content="Отмена" Click="btnCancel_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
