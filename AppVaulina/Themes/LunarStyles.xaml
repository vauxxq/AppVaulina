<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Цветовая палитра -->
    <SolidColorBrush x:Key="FFPrimaryBlue" Color="#158FD4" />
    <SolidColorBrush x:Key="FFDarkBlue" Color="#0E4A80" />
    <SolidColorBrush x:Key="FFWhite" Color="#bcced6" />
    <SolidColorBrush x:Key="FFGray" Color="#9DAECC" />
    <SolidColorBrush x:Key="FFBackground" Color="#01050B" />

    <!-- Стиль для TextBlock -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource FFWhite}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Стиль для Button -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource FFPrimaryBlue}" />
        <Setter Property="Foreground" Value="{StaticResource FFWhite}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource FFDarkBlue}" />
        <Setter Property="Foreground" Value="{StaticResource FFWhite}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="BorderBrush" Value="{StaticResource FFPrimaryBlue}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- Стиль для ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource FFDarkBlue}" />
        <Setter Property="Foreground" Value="{StaticResource FFPrimaryBlue}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="BorderBrush" Value="{StaticResource FFPrimaryBlue}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- Стиль для ComboBoxItem -->
    <Style TargetType="ComboBoxItem">
        <Setter Property="Background" Value="{StaticResource FFBackground}" />
        <Setter Property="Foreground" Value="{StaticResource FFPrimaryBlue}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="5" />
    </Style>

    <!-- Стиль для DatePicker -->
    <Style TargetType="DatePicker">
        <Setter Property="Background" Value="{StaticResource FFDarkBlue}" />
        <Setter Property="Foreground" Value="{StaticResource FFWhite}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BorderBrush" Value="{StaticResource FFPrimaryBlue}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- Стиль для DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource FFBackground}" />
        <Setter Property="Foreground" Value="{StaticResource FFWhite}" />
        <Setter Property="BorderBrush" Value="{StaticResource FFPrimaryBlue}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="RowBackground" Value="{StaticResource FFDarkBlue}" />
        <Setter Property="AlternatingRowBackground" Value="{StaticResource FFGray}" />
        <Setter Property="GridLinesVisibility" Value="None" />
    </Style>

    <!-- Стиль для DataGridColumnHeader -->
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource FFDarkBlue}" />
        <Setter Property="Foreground" Value="{StaticResource FFWhite}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <!-- Стиль для DataGridRow -->
    <Style TargetType="DataGridRow">
        <Setter Property="Background" Value="{StaticResource FFDarkBlue}" />
        <Setter Property="Foreground" Value="{StaticResource FFWhite}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

</ResourceDictionary>