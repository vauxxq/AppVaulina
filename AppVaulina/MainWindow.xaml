<Window x:Class="AppVaulina.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppVaulina"
        mc:Ignorable="d"
         Title="Магазин электроники - Главное меню" Height="229" Width="280" Background=" #0E4A80"  >
    <Grid Margin="0,0,0,12" HorizontalAlignment="Center" Width="260">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="434.04"/>
        </Grid.RowDefinitions>

        <!-- Панель меню вверху -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,10,0,244" HorizontalAlignment="Center" Width="144">
            <Button x:Name="btnProducts" 
                Content="Товары" 
                Click="btnProducts_Click" 
                Margin="5,5,5,5" Padding="10,5" Width="60"/>
            <Button x:Name="btnCategories" 
                Content="Категории" 
                Click="btnCategories_Click" 
                Margin="5,5,5,5" Padding="10,5" Width="80"/>
            <Button x:Name="btnSuppliers" 
                Content="Поставщики" 
                Click="btnSuppliers_Click" 
                Margin="5,5,5,5" Padding="10,5" Width="86"/>
            <Button x:Name="btnSales" 
                Content="Продажи" 
                Click="btnSales_Click" 
                Margin="5,5,5,5" Padding="10,5" Width="70"/>
            <Button x:Name="btnWarehouses" 
                Content="Склады" 
                Click="btnWarehouses_Click" 
                Margin="5,5,5,5" Padding="10,5" Width="60"/>
            <Button x:Name="btnClose" 
                Content="Выход" 
                Click="btnClose_Click" 
                Margin="5,5,5,5" Padding="10,5" Width="60"/>
        </StackPanel>
    </Grid>
</Window>
